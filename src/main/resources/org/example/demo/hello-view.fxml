<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="greeting"/>
    <ComboBox fx:id="langSelector" onAction="#changeLang"/>
    <ListView fx:id="jobList"/>

    <TextField fx:id="keyField" promptText="Enter Key Name"/>
    <TextField fx:id="translationField" promptText="New Translation"/>

    <Button fx:id="addTranslationButton" text="Add Translation" />
</VBox>